<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".view.ReviewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/AppTheme"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mmedium"
            android:text="@string/Requestt"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="50dp"
            android:paddingTop="20dp"
            android:paddingEnd="50dp">

            <TextView
                style="@style/ItemLayoutUserTitle"
                android:text="@string/sales"
                android:textSize="12sp" />

            <TextView
                style="@style/ItemLayoutUserField"
                android:text="123456789"
                android:textSize="16sp" />

            <TextView
                style="@style/ItemLayoutUserTitle"
                android:layout_marginTop="10dp"
                android:text="@string/company"
                android:textSize="12sp" />

            <TextView
                style="@style/ItemLayoutUserField"
                android:text="Company Name"
                android:textSize="16sp" />

            <TextView
                style="@style/ItemLayoutUserTitle"
                android:layout_marginTop="10dp"
                android:text="@string/branch"
                android:textSize="12sp" />

            <TextView
                style="@style/ItemLayoutUserField"
                android:text="Branch Name"
                android:textSize="16sp" />

            <TextView
                style="@style/ItemLayoutUserTitle"
                android:layout_marginTop="10dp"
                android:text="@string/nik"
                android:textSize="12sp" />

            <TextView
                style="@style/ItemLayoutUserField"
                android:text="Number NIK"
                android:textSize="16sp" />

            <TextView
                style="@style/ItemLayoutUserTitle"
                android:layout_marginTop="10dp"
                android:text="@string/Name"
                android:textSize="12sp" />

            <TextView
                style="@style/ItemLayoutUserField"
                android:text="@string/name"
                android:textSize="16sp" />

            <TextView
                style="@style/ItemLayoutUserTitle"
                android:layout_marginTop="10dp"
                android:text="@string/item"
                android:textSize="12sp" />

            <TextView
                style="@style/ItemLayoutUserField"
                android:layout_marginTop="10dp"
                android:text="123456789"
                android:textSize="16sp" />


            <include
                android:id="@+id/submit"
                style="@style/ItemLayout"
                layout="@layout/layout_btn_result_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>