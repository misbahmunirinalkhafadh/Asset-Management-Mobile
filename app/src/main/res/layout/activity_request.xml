<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".view.RequestActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/AppTheme">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mmedium"
            android:text="@string/Requestt"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_main"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/ItemLayoutUserTitle"
                    android:text="@string/salesorder"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorGreySoft" />

                <TextView
                    style="@style/ItemLayoutUserTitle"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/mregular"
                    android:text="@string/SONumber"
                    android:textSize="12sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_sales_order"
                    style="@style/ItemLayoutUserField"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_field"
                    android:hint="@string/Input_sales_order"
                    android:imeOptions="actionDone"
                    android:padding="10dp"
                    android:singleLine="true" />

                <TextView
                    style="@style/ItemLayoutUserTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/mregular"
                    android:text="@string/company"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_company"
                    style="@style/ItemLayoutUserField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/mregular"
                    android:text="@string/stript"
                    android:textSize="14sp" />

                <TextView
                    style="@style/ItemLayoutUserTitle"
                    android:layout_marginTop="16dp"
                    android:text="@string/branch" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_ipAddress"
                    style="@style/ItemLayoutUserField"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_field"
                    android:hint="@string/Input_Branch"
                    android:padding="10dp" />
            </LinearLayout>
            <!--            Asset-->
            <LinearLayout
                android:id="@+id/ll_user"
                style="@style/ItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/ItemLayoutUserTitle"
                    android:text="@string/employee"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorGreySoft" />

                <TextView
                    style="@style/ItemLayoutUserTitle"
                    android:text="@string/nik" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_nik"
                    style="@style/ItemLayoutUserField"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_field"
                    android:hint="@string/Input_NIK"
                    android:padding="10dp" />

                <TextView
                    style="@style/ItemLayoutUserTitle"
                    android:text="@string/Name" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/ItemLayoutUserField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/mregular"
                    android:text="@string/stript"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--            Search Asset-->
            <LinearLayout
                style="@style/ItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    style="@style/ItemLayoutUserTitle"
                    android:text="@string/asset"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorGreySoft" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search"
                    style="@style/ItemLayoutUserField"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_field"
                    android:hint="@string/search"
                    android:padding="10dp" />

            </LinearLayout>
            <!--            Button Request-->
            <include
                android:id="@+id/submit"
                style="@style/ItemLayout"
                layout="@layout/layout_btn_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="80dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>