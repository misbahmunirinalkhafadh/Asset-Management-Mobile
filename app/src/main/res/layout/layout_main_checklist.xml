<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_menu"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_checklist"
                style="@style/ItemLayoutUserTitle"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="8dp"
                android:background="#B5B7B9" />
            <CheckBox
                android:id="@+id/cb_antivirus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/antivirus"
                style="@style/ItemLayoutCheckbox"
                android:theme="@style/MyCheckbox"/>

            <CheckBox
                android:id="@+id/cb_os"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/operating_system"
                style="@style/ItemLayoutCheckbox"
                android:theme="@style/MyCheckbox"/>

            <CheckBox
                android:id="@+id/cb_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/application_standard"
                style="@style/ItemLayoutCheckbox"
                android:theme="@style/MyCheckbox"/>
            <CheckBox
                android:id="@+id/cb_cleaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cleaning"
                style="@style/ItemLayoutCheckbox"
                android:theme="@style/MyCheckbox"/>
            <CheckBox
                android:id="@+id/cb_function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/function"
                style="@style/ItemLayoutCheckbox"
                android:theme="@style/MyCheckbox"/>
        </LinearLayout>