    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_maintenance"
        style="@style/ButtonItem"
        android:background="@drawable/btn_blue"
        android:text="@string/confirm" />

    <Button
        android:id="@+id/btn_close"
