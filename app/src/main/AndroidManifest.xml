        <activity android:name=".view.ReviewActivity" />
        <activity android:name=".view.RequestActivity" />
        <activity android:name=".view.GenerateMaintenanceActivity" />
        <activity android:name=".view.MaintenanceActivity" />
        <activity android:name=".view.InformationActivity" />
        <activity android:name=".view.ProfileActivity" />
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.MainActivity" />
    </application>

</manifest>